<!-- Views/Game/MineSweeperBoard.cshtml -->
@model Board
@{
    ViewData["Title"] = "Minesweeper Board";
}

<h2>Minesweeper Board</h2>

<div class="board">
    @for (int i = 0; i < Model.Rows; i++)
    {
        <div class="row">
            @for (int j = 0; j < Model.Columns; j++)
            {
                var cell = Model.Cells[i][j];
                <button class="cell @(cell.IsRevealed ? "revealed" : "")"
                        asp-action="RevealCell"
                        asp-route-row="@i"
                        asp-route-col="@j">
                    @(cell.IsRevealed ? (cell.IsMine ? "*" : cell.AdjacentMines.ToString()) : "")
                </button>
            }
        </div>
    }
</div>
