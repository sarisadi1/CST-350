@model IEnumerable<Game>

<h2>Saved Games</h2>

@if (Model.Any())  
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>User ID</th>
                <th>Date Saved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.UserId</td>
                    <td>@game.DateSaved</td>
                    <td>
                        <a asp-action="LoadGame" asp-route-id="@game.Id" class="btn btn-success">Load</a>
                        <form asp-action="DeleteGame" asp-route-id="@game.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No saved games available.</p>
}
